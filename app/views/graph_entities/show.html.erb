<%= turbo_stream_from "collections" %>
<div class="flex">
  <%= render "shared/collection_list", collections: @collections, selected: @entity.collection %>

  <div id="collection_area" class="overflow-y-scroll no-scrollbar flex-1 h-screen bg-secondary-100 dark:bg-secondary-950 flextext-gray-700 dark:text-secondary-200">
    <%= render "shared/notice" %>

    <%= turbo_stream_from :collections %>
    <div class="flex flex-col h-full w-full items-center align-middle">
      <div class="w-3/4">
        <%= render "graph_entities/entity", entity: @entity %>

        <div class="flex-1 flex flex-col">
          <div class="text-lg text-secondary-925 dark:text-secondary-100 py-5">Descriptions</div>
          <%= render "graph_entities/search_form", query: @query, entity: @entity %>
          <%= render "graph_entities/descriptions", descriptions: @descriptions, entity: @entity %>
        </div>
      </div>
    </div>
  </div>
</div>
