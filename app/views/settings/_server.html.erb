
<% if server.nil? %>
  <div class="col-span-2 text-sm font-bold text-nowrap">Name</div>
  <div class="col-span-2 text-sm font-bold text-nowrap">Provider</div>
  <div class="col-span-4 text-sm font-bold text-nowrap">URL</div>
  <div class="col-span-1 text-sm font-bold text-center text-nowrap" title="Whether the inference server is the default for models with no explicit server set.">
    <span>Active</span>
    <span class="text-sm"><i class="text-sm fa fa-question-circle-o"></i></span>
  </div>
  <div class="col-span-1 font-bold text-center text-nowrap" title="Whether the server is currently accessible to Archyve.">
    <span class="text-sm">Available</span>
    <span class="text-sm"><i class="text-sm fa fa-question-circle-o"></i></span>
  </div>
  <div></div>
<% else %>
  <%= link_to model_server_path(server), class: "col-span-2 text-blue-500" do %>
    <div title="<%= server.name %>" class="truncate text-nowrap"><%= server.name %></div>
  <% end %>
  <div title="<%= server.provider %>" class="col-span-2 truncate text-nowrap"><%= server.provider %></div>
  <div title="<%= server.url %>" class="col-span-4 truncate text-nowrap">
    <%= server.url %>
  </div>
  <div title="<%= server.active %>" class="col-span-1 text-center truncate text-nowrap">
    <% if server.active %>
      <div class="p-2">
        <%= render "settings/icon_for_boolean", value: server.active %>
      </div>
    <% else %>
      <%= button_to model_server_activate_path(server),
        title: "Make active",
        class: "px-2 py-1 rounded-md border border-secondary-200 dark:border-secondary-800 hover:bg-secondary-300 hover:dark:bg-secondary-700" do
      %>
        <%= render "settings/icon_for_boolean", value: server.active %>
      <% end %>
    <% end %>
  </div>
  <div title="<%= server.available %>" class="col-span-1 text-center truncate text-nowrap">
    <% if server.available.is_a?(String) %>
      <%= server.available %>
    <% else server.available %>
      <div class="p-2">
        <%= render "settings/icon_for_boolean", value: server.available %>
      </div>
    <% end %>
  </div>
  <div class="flex col-span-1 text-center truncate text-nowrap">
    <%= button_to server, method: :delete, form: { data: { turbo_confirm: 'Are you sure?' } },
      class: "px-2 py-1 rounded-md hover:bg-secondary-300 hover:dark:bg-secondary-700",
      title: "Delete server" do
    %>
      <i class="fa fa-trash"></i>
    <% end %>
    <% if server.provider == "ollama" %>
      <%= button_to model_server_sync_models_path(server),
        class: "px-2 py-1 rounded-md hover:bg-secondary-300 hover:dark:bg-secondary-700",
        title: "Sync models from server..." do
      %>
        <i class="fa fa-refresh"></i>
      <% end %>
    <% end %>
  </div>
<% end %>
