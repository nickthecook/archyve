<% @document ||= document %>
<div id="<%= dom_id(document) %>-details">
  <div class="flex justify-center">
    <div class="flex flex-col w-3/4">
      <div class="flex items-center">
        <div class="p-4 text-lg font-semibold text-secondary-900 dark:text-secondary-100"><%= title_for(document) %></div>
        <div class="text-xs text-muted">Created <%= time_ago_in_words(document.created_at) %> ago.</div>
        <%= link_to "Back to collection", collection_path(@document.collection), class: "rounded-lg ml-auto py-1 mb-4 px-3 my-2 text-tertiary-200 dark:text-secondary-950 font-medium bg-tertiary-800 dark:bg-tertiary-400"%>
      </div>

      <div class="container flex flex-col items-center rounded-lg flex-start">
        <div id="<%= dom_id(document) %>-chunks">
          <% if document.chunks.any? %>
            <% document.chunks.each do |chunk| %>
              <%= render "shared/chunk", chunk:, distance: nil %>
            <% end %>
          <% else %>
            This document has no chunks.
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
